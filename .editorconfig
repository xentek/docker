# http://editorconfig.org
root = true

[*]
indent_size = 2
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
max_line_length = 80

[*.vm]
max_line_length = 120

[*.py]
indent_size = 4
insert_final_newline = true

# ignore minifified files
[**.min.*]
indent_style = ignore
insert_final_newline = ignore

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

[*.graphql]
max_line_length = off
